@model IEnumerable<ElfsLeatherStore.Models.Product>

@{
    ViewBag.Title = "Search Products";
}

<h2>Search Products</h2>

@using (Html.BeginForm())
{
    <hr />
    <div class="form-horizontal">
        <div class="form-group">
            <label class="control-label col-md-2">Criteria</label>
            <div class="col-md-10">
                @Html.RadioButton("criteria", "ProductName") Product Name &nbsp;
               
            </div>
        </div>

        <div class="form-group">
            <label for="keyword" class="control-label col-md-2">Keyword</label>
            <div class="col-md-10">
                @Html.TextBox("keyword")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Search" class="btn btn-success" />
            </div>
        </div>
    </div>
}
<hr /><br />

@if (Model == null || Model.Count() == 0)
{
    <div class="alert alert-warning">
        Empty data..
    </div>
}
else
{
    <div class="row">
        @foreach (var product in Model)
        {
            @Html.Partial("_KatalogPartial", product)
        }
    </div>
}